<Page x:Class="RegistrosEntradaSaidaAPP.Views.Veiculos.VeiculosCadastroPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegistrosEntradaSaidaAPP.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VeiculosCadastroPage">
    <Grid Margin="16">
        <materialDesign:Card Padding="24">
            <StackPanel>
                <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0 0 0 24">Cadastro de Veículos</TextBlock>

                <TextBox x:Name="MarcaTextBox" materialDesign:HintAssist.Hint="Marca"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0 0 0 16"/>

                <TextBox x:Name="ModeloTextBox" materialDesign:HintAssist.Hint="Modelo"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0 0 0 16"/>

                <TextBox x:Name="AnoTextBox" materialDesign:HintAssist.Hint="Ano"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0 0 0 16"/>

                <TextBox x:Name="PlacaTextBox" materialDesign:HintAssist.Hint="Placa"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0 0 0 16"/>

                <TextBox x:Name="EmpresaTextBox" materialDesign:HintAssist.Hint="Empresa"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0 0 0 16"/>        

                <Button Content="Salvar Veículo"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        HorizontalAlignment="Right"
                        Click="SalvarVeiculo_Click"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>
